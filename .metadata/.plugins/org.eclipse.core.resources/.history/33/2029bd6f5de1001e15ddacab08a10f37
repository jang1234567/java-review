package home03;

import java.util.Scanner;

public class Ex03 {
	public static void main(String[] args) {
		
		//정수형 변수 선언
		//입력클래스 호출,import
		//while문으로 반복문
		//입력받을 정수 출력문 작성
		//정수형 변수에 값 저장
		//조건문 0 작성시 종료
		
		
		int num = 1;
		int sum = 0;
		Scanner sc = new Scanner(System.in);
		
		while(num != 0) {
			System.out.println("정수 : ");
			num = sc.nextInt();
			sum = num+=num;
			
			if(num == 0) {
				break;
			}
			 System.out.println(sum);
			
		}
	}
}
