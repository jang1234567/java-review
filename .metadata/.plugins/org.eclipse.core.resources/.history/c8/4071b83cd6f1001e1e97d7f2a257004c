package forTest;

import java.util.Scanner;

public class Exam05_01 {
	public static void main(String[] args) {
		// 숫자 맞추기 게임
		int magicNumber = (int) (Math.random() * 50) + 1;
		System.out.println(magicNumber);
		Scanner sc = new Scanner(System.in);
		boolean ismatched = false;

		for (int i = 0; i < 10; i++) {
			System.out.println("찾는 숫자를 입력하세요");
			int guess = sc.nextInt();
			if (guess == magicNumber) {
				System.out.println(i + 1 + "번째에 맞췄습니다");
				break;
			} else if (guess > magicNumber) {
				System.out.println("맞춰야할 숫자가 더 작습니다");
			} else if (guess < magicNumber) {
				System.out.println("맞춰야할 숫자가 더 큽니다");
			}
		}
		if(ismatched) {
			System.out.println("정답을 맞추지 못하였습니다");
		}
	}

}
