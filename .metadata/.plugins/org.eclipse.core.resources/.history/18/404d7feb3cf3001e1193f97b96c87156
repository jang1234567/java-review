package final1;

import java.util.ArrayList;
import java.util.HashMap;

// Board 클래스
public class Board {
	public static HashMap<Integer, Post> postList = new HashMap();
	Post post = new Post();

	// 게시물 저장하기 메소드
	public HashMap<Integer,Post> addPost(String title, String content) {
		int i = 0;
		post.setId(i++);
		post.setTitle(title);
		post.setContent(content);
		postList.put(post.getId(), post);
		return postList;
		
	}

	// 게시물 조회
	public ArrayList<Post> getAllPosts() {
		return new ArrayList<>(posts);
	}

	// 삭제하기
	public void deletePost(Post post) {
//		try{
//			posts.remove(post.getId());
//			if(post.getId() = 0;)
//			}catch(Exception e) {
