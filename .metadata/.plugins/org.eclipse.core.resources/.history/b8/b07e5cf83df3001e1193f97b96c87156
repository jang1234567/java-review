package final1;

import java.util.HashMap;
import java.util.Map.Entry;
import java.util.Set;

// Board 클래스
public class Board {
	public static HashMap<Integer, Post> postList = new HashMap();
	Post post = new Post();
	int i = 1;

	// 게시물 저장하기 메소드
	public HashMap<Integer,Post> addPost(String title, String content) {
		post.setId(i++);
		post.setTitle(title);
		post.setContent(content);
		postList.put(post.getId(), post);
		System.out.println(post.getId());
		return postList;
		
	}

	// 게시물 조회
	void getAllPosts() {
		Set<Entry<Integer,Post>> all = postList.entrySet();
		for (Entry<Integer, Post> entry : all) {
			System.out.println(entry.getValue().getContent());
			
		}
	}

	// 삭제하기
	public void deletePost(Post post) {
//		try{
//			posts.remove(post.getId());
//			if(post.getId() = 0;)
//			}catch(Exception e) {
//				
//			}
		posts.remove(post.getId());
	}

}
